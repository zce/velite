{
  "name": "velite",
  "version": "0.1.0-alpha.19",
  "description": "Turns Markdown, YAML, JSON, or other files into an app's data layer based on a schema.",
  "keywords": [
    "content",
    "contentlayer",
    "headless-cms",
    "data-layer",
    "generator",
    "creative",
    "velite",
    "cli",
    "zce"
  ],
  "repository": "zce/velite",
  "license": "MIT",
  "author": "zce <w@zce.me> (https://zce.me)",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsup",
    "format": "prettier --write ."
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "clean": true,
    "format": "esm",
    "target": "node18",
    "splitting": true,
    "treeshake": true,
    "dts": {
      "entry": "src/index.ts",
      "resolve": true
    }
  },
  "prettier": "@zce/prettier-config",
  "dependencies": {
    "cac": "^6.7.14",
    "esbuild": "^0.19.5",
    "fast-glob": "^3.3.2",
    "hast-util-excerpt": "^2.0.0",
    "hast-util-reading-time": "^2.0.0",
    "hast-util-truncate": "^2.0.0",
    "micromatch": "^4.0.5",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "sharp": "^0.32.6",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.1",
    "vfile-reporter": "^8.1.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.5",
    "@types/node": "^20.9.2",
    "@zce/prettier-config": "^0.1.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
